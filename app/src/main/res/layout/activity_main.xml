<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.calculadorabmi.MainActivity"
    android:background="@drawable/images">

    <EditText
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/altura"
        android:editable="false"
        android:background="#3066b8"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Altura"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/peso"
        android:background="#3066b8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/altura"
        android:layout_alignStart="@+id/altura"
        android:hint="Peso"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso (KG):"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:layout_below="@+id/altura"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura (cm):"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:layout_above="@+id/altura"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculadora de IMC"
        android:id="@+id/titulo"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:textSize="35sp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/imc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/calcbutton"
        android:layout_below="@+id/peso"
        android:layout_alignRight="@+id/peso"
        android:layout_alignEnd="@+id/peso"
        android:layout_alignLeft="@+id/peso"
        android:layout_alignStart="@+id/peso" />

</RelativeLayout>
